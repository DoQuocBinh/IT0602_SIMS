@model Teacher
<h1 style="color:orange">New Teacher</h1>

@using (Html.BeginForm("NewTeacher", "Teacher", FormMethod.Post))
{
        <div class="form-group">
            @Html.LabelFor(m => m.Id, new { Class = "control-label" })
            @Html.TextBoxFor(m => m.Id, new {Class= "form-control" })
        </div>
    
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { Class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { Class = "form-control" })
        </div>
        <div class="form-group">
             @Html.LabelFor(m => m.DoB,  new { Class = "control-label" })
             @Html.TextBoxFor(m => m.DoB, new { Class = "form-control" })
        </div>
        <input type="submit" value="Create" class="btn btn-primary" />
     
  }
